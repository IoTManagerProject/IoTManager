{
  "configs": [
    "/runtime.json",
    "/config.json",
    "/lang/lang.ru.json"
  ],
  "title": "{{LS_main_page}}",
  "class": "col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
  "content": [
    {
      "type": "h5",
      "title": "{{devname}}",
      "class": "alert-default"
    },
    {
      "type": "hr"
    },
    {
      "type": "h4",
      "title": "{{LS_device_id}}: {{chipID}}"
    },
    {
      "type": "h4",
      "title": "{{LS_address}}: {{ip}}"
    },
    {
      "type": "h4",
      "title": "{{LS_time_local}}: {{time}}"
    },
    {
      "type": "h4",
      "title": "{{LS_time_uptime}}: {{uptime}}"
    },
    {
      "type": "link",
      "title": "{{LS_restart_device}}",
      "action": "javascript:if(confirm(renameBlock(jsonResponse,'Перезагрузить?'))){send_request(this,'/restart?device=ok');}",
      "class": "btn btn-danger"
    },
    {
      "type": "hr"
    },
    {
      "type": "link",
      "title": "Конфигурация",
      "action": "/?set.device",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "link",
      "title": "Конфигурация",
      "action": "/?set.device",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "link",
      "title": "Устройства в сети",
      "action": "/?set.udp",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "link",
      "title": "Настройка WiFi",
      "action": "/?set.wifi",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "link",
      "title": "Настройка MQTT",
      "action": "/?set.mqtt",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "link",
      "title": "Настройка Push",
      "action": "/?set.push",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "link",
      "title": "Утилиты",
      "action": "/?set.utilities",
      "class": "btn btn-block btn-center"
    },
    {
      "type": "hr"
    },
    {
      "type": "h4",
      "title": "{{firmware_version}}",
      "style": "float:right"
    }
  ]
}